# --- WorkOS Auth ---
FOUNDRY_AUTH_ENABLED=true
FOUNDRY_AUTH_ISSUER_URL=https://api.workos.com
FOUNDRY_AUTH_CLIENT_ID={{ pass://Secrets management/WorkOS/client_id }}
FOUNDRY_AUTH_CLIENT_SECRET={{ pass://Secrets management/WorkOS/client_secret }}
FOUNDRY_AUTH_REDIRECT_URL=https://foundry.l3s.me/auth/callback
FOUNDRY_AUTH_ALLOWED_EMAILS={{ pass://Secrets management/WorkOS/allowed_emails }}

# --- GitHub Webhook ---
GITHUB_WEBHOOK_SECRET={{ pass://Secrets management/GitHub/webhook_secret }}

# --- GitHub App ---
GITHUB_APP_ID={{ pass://Secrets management/GitHub/app_id }}
GITHUB_INSTALLATION_ID={{ pass://Secrets management/GitHub/installation_id }}
GITHUB_TOKEN={{ pass://Secrets management/GitHub/token }}

# --- Cloudflare ---
CF_ACCOUNT_ID={{ pass://Secrets management/Cloudflare/account_id }}
CF_API_TOKEN={{ pass://Secrets management/Cloudflare/api_token }}
CF_ZONE_ID={{ pass://Secrets management/Cloudflare/zone_id }}
CF_TUNNEL_NAME=mini_server
CF_TUNNEL_DOMAIN=foundry.l3s.me
TUNNEL_TOKEN={{ pass://Secrets management/Cloudflare/tunnel_token }}
