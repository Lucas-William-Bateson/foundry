# =============================================================================
# Foundry environment example
#
# DO NOT put real secrets here. All secrets are managed via Proton Pass.
# Run: pass-cli inject secrets.env.template -o secrets.env
# =============================================================================

# Database
DATABASE_URL=postgres://foundry:foundry@postgres:5432/foundry

# Server
FOUNDRY_BIND_ADDR=0.0.0.0:8081

# --- Secrets (see secrets.env.template for Proton Pass managed values) ---

# GitHub
GITHUB_WEBHOOK_SECRET=
GITHUB_APP_ID=
GITHUB_INSTALLATION_ID=
GITHUB_TOKEN=

# Cloudflare Tunnel
CF_ACCOUNT_ID=
CF_API_TOKEN=
CF_ZONE_ID=
CF_TUNNEL_NAME=mini_server
CF_TUNNEL_DOMAIN=foundry.l3s.me
TUNNEL_TOKEN=

# WorkOS Authentication
FOUNDRY_AUTH_ENABLED=true
FOUNDRY_AUTH_ISSUER_URL=https://api.workos.com
FOUNDRY_AUTH_CLIENT_ID=
FOUNDRY_AUTH_CLIENT_SECRET=
FOUNDRY_AUTH_COOKIE_SECRET=   # generate with: openssl rand -base64 32
FOUNDRY_AUTH_REDIRECT_URL=https://foundry.l3s.me/auth/callback
FOUNDRY_AUTH_ALLOWED_EMAILS=

# Agent
FOUNDRY_SERVER_URL=http://foundryd:8081
FOUNDRY_AGENT_ID=docker-agent
FOUNDRY_WORKSPACE_DIR=/workspace
