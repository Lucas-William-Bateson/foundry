DATABASE_URL=postgres://postgres:postgres@localhost:5432/foundry
GITHUB_WEBHOOK_SECRET=changeme

# Cloudflare Tunnel
# Get these from Cloudflare dashboard
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_API_TOKEN=your_cloudflare_api_token
CF_ZONE_ID=your_zone_id_for_l3s.me

# GitHub App (for private repo access)
# GITHUB_APP_ID=123456
# GITHUB_INSTALLATION_ID=12345678
# GITHUB_APP_PRIVATE_KEY_PATH=./config/github-app.pem

# Agent config
FOUNDRY_SERVER_URL=http://localhost:8080
FOUNDRY_AGENT_ID=mac-mini
FOUNDRY_DEFAULT_COMMAND=echo 'Hello from Foundry!'

# Authentication (OIDC - WorkOS)
# Set FOUNDRY_AUTH_ENABLED=true to enable authentication
# FOUNDRY_AUTH_ENABLED=true
# FOUNDRY_AUTH_ISSUER_URL=https://api.workos.com
# FOUNDRY_AUTH_CLIENT_ID=<workos-client-id-from-dashboard>
# FOUNDRY_AUTH_CLIENT_SECRET=<workos-api-key-from-dashboard>
# FOUNDRY_AUTH_REDIRECT_URL=https://foundry.l3s.me/auth/callback
# Note: FOUNDRY_AUTH_COOKIE_SECRET is no longer required (JWTs are validated via JWKS)
# FOUNDRY_AUTH_ALLOWED_EMAILS=your-email@example.com  # Optional: comma-separated list
